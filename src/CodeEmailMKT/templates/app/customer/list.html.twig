{% extends "@layout/default.html.twig" %}
{% block content %}
    <div class="row">
        <div class="box">
            <div class="box-body">
                <a class="btn btn-app" href="{{ path('customer.create') }}">
                    <i class="fa fa-plus-circle"></i> Novo
                </a>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 10px;">#</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Ações</th>
                        </tr>
                        {% for customer in customers %}
                            <tr>
                                <td>{{ customer.id }}</td>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.email }}</td>
                                <td><a href="{{ url('customer.update', {id: customer.id}) }}">Editar</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Listagem de Contatos - {{ parent() }}
{% endblock %}

{% block page_header %}
    Listagem de Contatos
{% endblock %}