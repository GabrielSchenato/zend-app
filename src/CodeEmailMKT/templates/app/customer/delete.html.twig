{% extends "@layout/default.html.twig" %}
{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class', 'form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class', 'form-control') %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-danger').setLabel('Excluir') %}
    {% do form.setAttribute('action', url('customer.delete', {id: form.getObject().id})) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-md-8">
            <div class="box box-danger">
                <div class="box-body">                    
                    <fieldset disabled>
                        <div class="box-body">
                            <div class="form-group">
                                {{ formRow(name) }}
                            </div>
                            <div class="form-group">
                                {{ formRow(email) }}
                            </div>
                        </div>
                    </fieldset>              
                    {{ form().openTag(form) | raw }}
                    {{ formHidden(form.get('_method')) }}
                    <div class="box-footer">
                        {{ formButton(submit) }}
                    </div>
                    {{ form().closeTag() | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Excluir Contato - {{ parent() }}
{% endblock %}

{% block page_header %}
    Excluir Contato de {{ form.getObject().name }}
{% endblock %}